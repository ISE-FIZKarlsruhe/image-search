{
  "classes": [
    {
      "class": "Image",
      "description": "Images of various things",
      "vectorizer": "multi2vec-clip",
      "moduleConfig": {
        "multi2vec-clip": {
          "imageFields": ["image"]
        }
      },
      "properties": [
        {
          "name": "image",
          "dataType": ["blob"],
          "description": "the image itself"
        },
        {
          "name": "subject",
          "dataType": ["text"],
          "description": "the subject of the corresponding rdf triple"
        },
        {
          "name": "fileName",
          "dataType": ["text"],
          "description": "the file name of the image before it was indexed"
        },
        {
          "name": "identifier",
          "dataType": ["string"],
          "description": "an image id"
        }
      ]
    }
  ]
}
